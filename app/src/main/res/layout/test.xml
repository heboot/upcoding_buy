<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llyt_main_bottom"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/ib_main_recommend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:button="@null"
            android:gravity="center"
            android:padding="16dp"
            android:src="@drawable/ic_account_balance_gray_24dp"
            android:tag="ib_main_recommend" />

        <ImageButton
            android:id="@+id/ib_main_post"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:padding="16dp"
            android:src="@drawable/ic_account_balance_gray_24dp"
            android:tag="ib_main_post" />

        <ImageButton
            android:id="@+id/ib_main_msg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:button="@null"
            android:gravity="center"
            android:padding="16dp"
            android:src="@drawable/ic_account_balance_gray_24dp"
            android:tag="ib_main_msg" />

        <ImageButton
            android:id="@+id/ib_main_my"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:button="@null"
            android:gravity="center"
            android:padding="16dp"
            android:src="@drawable/ic_account_balance_gray_24dp"
            android:tag="ib_main_my" />
    </LinearLayout>
</LinearLayout>